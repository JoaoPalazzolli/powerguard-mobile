<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Telemetria - Consumo de Energia"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status dos Dispositivos"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/acCard"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:background="@drawable/card_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/acStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ar Condicionado - Sala 1 - Status: Ligado - Consumo: 1,5 kWh"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <Switch
            android:id="@+id/acSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lightCard"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:background="@drawable/card_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/lightStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Iluminação - Corredor - Status: Ligado - Consumo: 0,5 kWh"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <Switch
            android:id="@+id/lightSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="true"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pcCard"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:background="@drawable/card_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/pcStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Computador - Escritório - Status: Desligado - Consumo: 0,1 kWh"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <Switch
            android:id="@+id/pcSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fridgeCard"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp">

        <TextView
            android:id="@+id/fridgeStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Geladeira - Cozinha - Status: Ligado - Consumo: 0,8 kWh"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <Switch
            android:id="@+id/fridgeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:checked="true"/>
    </LinearLayout>

    <TextView
        android:id="@+id/totalConsumption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Consumo Total: 2,8 kWh"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="end"
        android:layout_marginTop="16dp"/>
</LinearLayout>