<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalhes do Dispositivo"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Card com os detalhes do dispositivo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/deviceName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome: Ar Condicionado - Sala 1"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/deviceStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Ligado"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/deviceConsumption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Consumo: 1.5 kWh"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/deviceMac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAC: 00:18:44:11:3AB7"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/deviceIp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IP: 192.168.1.100"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/deviceType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo: Ar Condicionado"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>

        <!-- Botões de ação -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Voltar para a lista"
                android:textColor="@color/white"
                android:backgroundTint="@color/purple_500"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>